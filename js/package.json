{
  "name": "ipytree",
  "version": "0.2.1",
  "description": "A Tree Widget using jsTree",
  "author": "Martin Renou",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuantStack/ipytree.git"
  },
  "keywords": [
    "jupyter",
    "widgets",
    "ipython",
    "ipywidgets",
    "jupyterlab-extension"
  ],
  "files": [
    "lib/**/*.js",
    "lib/**/*.css",
    "dist/*.js"
  ],
  "scripts": {
    "build": "webpack && npm run build:labextension",
    "build:labextension": "jupyter labextension build .",
    "clean": "rimraf dist/ && rimraf ../ipytree/labextension/ && rimraf ../ipytree/nbextension"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^3.0.0",
    "webpack": "^5",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.1",
    "css-loader": "^0.28.7",
    "url-loader": "^1.1.1"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^2.0.1 || ^3 || ^4 || ^5 || ^6",
    "jstree": "~3.3.9",
    "lodash": "^4.17.4"
  },
  "jupyterlab": {
    "extension": "lib/labplugin",
    "outputDir": "../ipytree/labextension",
    "sharedPackages": {
      "@jupyter-widgets/base": {
        "bundled": false,
        "singleton": true
      }
    }
  }
}
